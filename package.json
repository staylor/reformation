    "forever": "3.0.4",
    "graphql": "15.5.0",
    "html-escape": "2.0.0",
    "http-proxy-middleware": "1.3.1",
    "invariant": "2.2.4",
    "isomorphic-fetch": "3.0.0",
    "js-cookie": "2.2.1",
    "kyt-runtime": "1.2.33",
    "lodash.debounce": "4.0.8",
    "morgan": "1.10.0",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "polished": "4.1.2",
    "pretty-lights": "0.0.19",
    "prop-types": "15.7.2",
    "query-string": "6.13.7",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-helmet-async": "1.0.9",
    "react-router-dom": "5.2.0",
    "redraft": "0.10.2",
    "regenerator-runtime": "0.13.7",
    "source-map-support": "0.5.19"
  },
  "scripts": {
    "test": "BABEL_ENV=test env-cmd -e dev jest",
    "test-watch": "yarn test --watch",
    "test-update": "yarn test -u",
    "dev": "env-cmd -e dev kyt dev -C kyt.dev.js",
    "prod:build": "NODE_ENV=production env-cmd -e prod kyt build -C kyt.prod.js",
    "prod:stop": "forever stop highforthis",
    "prod:start": "NODE_ENV=production env-cmd -e prod forever start -a forever.prod.json",
    "prod": "yarn prod:build && yarn prod:stop && yarn prod:start",
    "prod:local": "yarn && yarn prod:build && yarn prod:local:start",
    "prod:local:start": "env-cmd -e prod node build/server/main.js",
    "lint": "eslint . --report-unused-disable-directives",
    "lint-fix": "yarn lint --fix",
    "update-schema:sdl": "apollo client:download-schema graphql/schema.json",
    "update-schema:json": "apollo client:download-schema graphql/schema.graphql",
    "update-schema": "yarn update-schema:sdl && yarn update-schema:json"
  },
  "husky": {
    "hooks": {
      "precommit": "eslint ."
    }
  },
  "devDependencies": {
    "@babel/core": "7.13.16",
    "@babel/eslint-parser": "7.13.14",
    "@babel/eslint-plugin": "7.13.16",
    "apollo": "2.32.10",
    "babel-preset-kyt-react": "1.3.6",
    "enzyme": "3.11.0",
    "eslint": "7.25.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-kyt": "1.5.6",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-webpack": "0.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jest-formatting": "2.0.1",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-kyt": "1.4.4",
    "eslint-plugin-lodash": "7.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-pretty-lights": "0.0.23",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-preset-kyt-enzyme": "1.4.2",
    "jest-preset-kyt-styled": "1.4.8",
    "kyt": "1.1.5",
    "prettier": "2.2.1",
    "rimraf": "3.0.2"
  }
